<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:bind="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="rvItem"
            type="com.pastir.model.MotivationalSticker"/>
        <variable
            name="listener"
            type="com.pastir.model.OnListItemClickListener"/>
    </data>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="@dimen/default_padding"
                  android:layout_marginRight="@dimen/default_padding"
                  android:onClick="@{()->listener.onItemClicked(rvItem)}"
                  android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/image_list_item_size"
            android:layout_height="@dimen/image_list_item_size"
            android:adjustViewBounds="true"
            bind:imageUrl="@{rvItem.imageUrl}"
            />

    </LinearLayout>
</layout>